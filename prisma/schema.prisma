datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Infractions {
    id          String   @id @default(cuid())
    userId      String
    moderatorId String
    reason      String
    type        String
    issuedAt    DateTime @default(now())
}

model Experience {
    userId     String @id @unique
    xp         Int    @default(0)
    level      Int    @default(0)
    requiredXp Int    @default(100)
}
