// Datasource setup
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Client Generator
generator client {
    provider = "prisma-client-js"
}

// Model Definitions
model User {
    userId          String    @id
    permissionLevel Int       @default(0)
    birthday        DateTime?
    levels          Levels    @relation(fields: [userId], references: [userId])
}

model Levels {
    userId  String @id
    levelXp Int    @default(0)
    level   Int    @default(0)
    User    User[]
}

model Economy {
    userId String    @id
    money  Int       @default(0)
    bank   Int       @default(0)
    daily  DateTime?
    work   DateTime?
}
