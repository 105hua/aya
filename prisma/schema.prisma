datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Infractions {
    id          String   @id @default(cuid())
    userId      String
    moderatorId String
    reason      String
    type        String
    issuedAt    DateTime @default(now())
}

model Experience {
    userId     String @id @unique
    xp         Int    @default(0)
    level      Int    @default(0)
    requiredXp Int    @default(100)
}

model Economy {
    userId     String   @id @unique
    balance    Int
    bank       Int      @default(0)
    lastDaily  DateTime @default("1970-01-01T00:00:00.000Z")
    lastWeekly DateTime @default("1970-01-01T00:00:00.000Z")
    lastWork   DateTime @default("1970-01-01T00:00:00.000Z")
    lastRob    DateTime @default("1970-01-01T00:00:00.000Z")
    lastCrime  DateTime @default("1970-01-01T00:00:00.000Z")
}
